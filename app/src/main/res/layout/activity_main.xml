<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="@color/PurpleApp"
    android:padding="10dp"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="24dp"
    android:background="@drawable/bg">

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="800px"
        android:layout_height="200px"
        android:layout_marginStart="10dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="9dp"
        android:text="Entrar"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/email_login"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_marginStart="10dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="10dp"
        android:drawableStart="@drawable/mail"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:hint="Insira o e-mail"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="10dp"
        android:width="1dip"
        android:color="#4fa5d5"
        android:drawableStart="@drawable/lock"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:hint="Insira a palavra-passe"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_login" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginBottom="53dp"
        android:text="Entrar"
        android:textSize="100px"
        app:layout_constraintBottom_toBottomOf="@+id/email_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.093"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="409dp"
        android:layout_height="312dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo1" />

    <TextView
        android:id="@+id/click"
        android:layout_width="218dp"
        android:layout_height="39dp"
        android:layout_marginTop="650dp"
        android:clickable="true"
        android:gravity="right"
        android:onClick="onClick"
        android:text="NÃ£o tens conta?"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="19dp" />

    <TextView
        android:id="@+id/TextViewEntrar"
        android:layout_width="167dp"
        android:layout_height="44dp"
        android:layout_marginStart="620dp"
        android:layout_marginTop="650dp"
        android:clickable="true"
        android:foregroundTint="@color/purple_500"
        android:gravity="left"
        android:onClick="onClick"
        android:text="Regista-te"
        android:textColor="@color/PurpleApp"
        android:textSize="25sp"
        app:drawableTint="@color/purple_500"
        app:layout_constraintEnd_toStartOf="@+id/click"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

